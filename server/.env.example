# Server Environment Variables Template
# Copy this file to .env and fill in your actual values

# Required: Get your Gemini API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Port configuration (defaults to 5179)
PORT=5179

# Optional: Environment setting (development/production)
ENVIRONMENT=development

# Optional: Firebase service account JSON (for production deployment)
# You can either use individual variables OR the full JSON
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project",...}

# Individual Firebase variables (alternative to SERVICE_ACCOUNT)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=your_client_email
FIREBASE_PRIVATE_KEY=your_private_key
